<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.online_exam_system_backend.mapper.StudentMapper">

    <update id="update">
        UPDATE `exam_system`.`student`
        <set>
            <if test="email != null">
                email = #{email},
            </if>
            <if test="phone != null">
                phone = #{phone}
            </if>
        </set>
        WHERE (`id` = #{id})
    </update>
</mapper>